@model List<lab7.Models.Card>

@{
    ViewData["Title"] = "Card Page";
}

<div class="text-center">
    @Html.ActionLink("Add card", "Add")

    @if (Model.Count > 0)
    {
        <table>
            <tr>
                <th>Id</th>
                <th>Id Клиента</th>
                <th>Денеги на счету</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.ClientId)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.Money)
                    </td>

                    <td>
                        @Html.ActionLink(" Edit ", "Edit", new { id = item.Id, item })
                        @Html.ActionLink(" Details ", "Details", new { id = item.Id})
                        @Html.ActionLink(" Delete ", "Delete", new { id = item.Id })
                    </td>

                </tr>
            }
        </table>
    }
</div>